html
	head
		title Leraar
	body
		link(rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
		script(src="../js/jquery-3.2.1.min.js")
		script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
		script(src="../js/datepicker.js")
		link(rel="stylesheet" src)
		header
			nav
				div
					a(href= "/") Home
				div 
					a(href='/register') Register
				div
					a(href='/logout') Logout
		main
			h1 Welkom bij uw profiel #{teacher.firstname}!
			div.kindgegevens
				h2 Dit zijn uw studenten:
				each student in students
					table
						tr
							th Voornaam
							th Achternaam
							th Geboortedatum
							th School
							th Ouder
							th Telefoonnummer ouder
							th Email ouder
						tr
							td #{student.firstname}
							td #{student.lastname}
							td #{student.birthdate}
							td #{student.school}
							td #{student.parent.firstname} #{student.parent.lastname}
							td #{student.parent.phoneNumber}
							td #{student.parent.email}
				h2 Dit zijn de studenten die nog geaccepteerd moeten worden:
				each intake in intakes
					h3 #{intake.firstname} #{intake.lastname}
					form(action='/intake' method='post')
						input(type='hidden' name='id' value=intake.id)
						select(type="text" name="classId")
							each klas in klassen
								option(value=klas.id) #{klas.className}
						input(type='submit' value='Submit')
				h2 Voeg leraren toe:
				form(action='/teacher' method='post')
					input(type='text' placeholder='Voornaam' name='firstname' required)
					br
					input(type='text' placeholder='Achternaam' name='lasttname' required)
					br
					input(id='date' type='' placeholder='Geboortedatum' name='birthdate' required)
					br
					input(type='text' placeholder='Geslacht' name='gender' required)
					br
					input(type='text' placeholder='wachtwoord' name='password' required)
					br
					select(type="text" name="classId" required)
						each klas in klassen
							option(value=klas.id) #{klas.className}
					br
					input(type='submit' value='Submit')
				h2 Voeg klassen toe:
				form(action='klassen' method='post')
					input(type='text' placeholder='klasnaam' name='className' required)
					br
					input(type='submit' value='Submit')
		footer
			h4 &copy; 2017 Ansaar School Inc. All rights reserved.