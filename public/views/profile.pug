	body
		.brand Ansaar School
		.address-bar Monseigneur van Leeuwenlaan 11A | 2182 EM Hillegom | 52.288095, 4.579262
		// Navigation
		nav.navbar.navbar-default(role='navigation')
			.container
				// Brand and toggle get grouped for better mobile display
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					// navbar-brand is hidden on larger screens, but visible when the menu is collapsed
					a.navbar-brand(href='index.html') Ansaar School
				// Collect the nav links, forms, and other content for toggling
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='/') Home
						li
							a(href='/about') Over ons
						li
							a(href='/contact') Contact
						li
							a(href='/logout') Uitloggen
				// /.navbar-collapse
			// /.container
		.container
			if students.length > 0
				.row
					.box
						.col-lg-12
							h2 Lessen van uw kinderen:
							each student in students
								if student.lessons.length > 0
									h3 #{student.firstname} #{student.lastname}
									table(class="table table-bordered")
										tr
											th Lesdatum
											th Voornaam
											th Achternaam
											th Aanwezigheid
											th Gedrag
											th Huiswerk
											th Huiswerk voor volgende les
										each lesson in student.lessons
											tr
												th #{lesson.date}
												td #{student.firstname} 
												td #{student.lastname}
												td #{lesson.attendance}
												td #{lesson.behaviour}
												td #{lesson.homework} 
												td #{lesson.nextHomework}
							hr
			.row
				.box
					.col-lg-12.text-center
						h2 Schrijf je kind in:
						h3
							form(action="/kindInschrijven" method="post")
								input(type='text' placeholder="Voornaam" name="firstname" required)
								br
								input(type='text' placeholder="Achternaam" name="lastname" required)
								br
								input(id="date" type='date' placeholder="Geboortedatum" name="birthdate" required)
								br
								input(type='radio' name="gender" value="male" required) 
								| Man
								input(type='radio' name="gender" value="female" required) 
								| Vrouw
								br
								select(type='text' placeholder="School" name="school" required)
									option(value="Fioretti") Fioretti
									option(value="Hilmare") Hilmare
									option(value="Willinkschool") Willinkschool
									option(value="Anders") Anders
								br
								select(type="text" placeholder="niveau" name="level" required)
									option(value="begin") Niveau 1: kan het alfabet nog niet goed
									option(value="gevorderd") Niveau 2: mijn kind nog niet goed lezen en schrijven
									option(value="vergevorderd") Niveau 3: mijn kind kan goed lezen en schrijven
								br
								input(type='hidden' name="parentId" value=user.id)
								input(type='submit' value="Inschrijving versturen")
						hr
